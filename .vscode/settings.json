{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/*.bbl": true,
        "**/*.aux": true,
        // "**/*.log": true,
        "**/*.out": true,
        "**/*.fls": true,
        "**/*.fdb_latexmk": true,
        "**/*.synctex.gz": true,
        "**/*.toc": true,
        "**/*.lof": true,
        "**/*.lot": true,
        "**/*.lol   ": true,
    },
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk (shell escape)",
            "command": "latexmk",
            "args": [
                "-pdf",
                "-shell-escape",
                "%DOC%"
            ]
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk (shell escape)",
            "tools": [
                "latexmk (shell escape)"
            ]
        }
    ]
}